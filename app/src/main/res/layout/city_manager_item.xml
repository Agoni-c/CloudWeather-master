<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/city_item_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/city_item_tv_city"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:text="惠安"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/city_item_tv_temp"
                android:layout_alignParentRight="true"
                android:text="12℃"
                android:textSize="36dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/city_item_iv_line"
                android:layout_below="@+id/city_item_tv_temp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#808a87"/>
            <TextView
                android:id="@+id/city_item_tv_condition"
                android:textSize="16dp"
                android:layout_below="@+id/city_item_iv_line"
                android:text="天气晴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/city_item_iv_line2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="#808a87"
                android:layout_marginRight="5dp"
                android:layout_below="@id/city_item_iv_line"
                android:layout_toRightOf="@id/city_item_tv_condition" />
            <TextView
                android:id="@+id/city_item_tv_wind"
                android:textSize="16dp"
                android:text="东北风2级"
                android:layout_toRightOf="@id/city_item_iv_line2"
                android:layout_below="@id/city_item_iv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/city_item_tv_temprange"
                android:layout_below="@+id/city_item_iv_line"
                android:text="9-16℃"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
